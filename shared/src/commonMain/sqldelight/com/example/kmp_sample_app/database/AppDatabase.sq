
CREATE TABLE Todo (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    is_done INTEGER NOT NULL DEFAULT 0
);

selectAllTodos:
SELECT * FROM Todo;

insertTodo:
INSERT INTO Todo(title, is_done) VALUES (:title, :is_done);

toggleTodoStatus:
UPDATE Todo SET is_done = :is_done WHERE id = :id;

deleteTodo:
DELETE FROM Todo WHERE id = :id;
